<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cc000000"
    tools:context=".activity.GroupChatSettingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/msgBar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#60000000"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/back2"
        android:theme="?attr/actionBarTheme"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/other_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="聊天信息"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textFontWeight="1000"
                ></TextView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                >
            </RelativeLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:id="@+id/group_menber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        ></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/ly_group_chat_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_design11"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:text="群聊名称"
            ></TextView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/group_chat_name"
            android:layout_toLeftOf="@+id/next_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#aaffffff"
            android:padding="12dp"
            android:text="群聊名称"
            ></TextView>
            <LinearLayout
                android:id="@+id/next_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/next"
                ></ImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_add_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bt_design11"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:text="添加新成员"
            ></TextView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/next"
                    ></ImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_search_chat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_design11"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:text="查找聊天记录"
            ></TextView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/next"
                    ></ImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#aaffffff"
        ></TextView>
    <LinearLayout
        android:id="@+id/ly_delete_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bt_design11"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:text="删除聊天记录"
            ></TextView>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/next"
                    ></ImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_delete_chat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_design11"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/red"
                android:padding="12dp"
                android:textFontWeight="1000"
                android:text="删除并退出"
                ></TextView>
        </LinearLayout>
</LinearLayout>