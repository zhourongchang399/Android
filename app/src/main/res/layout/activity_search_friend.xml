<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/layout_radius"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="30dp"
                >
                <com.example.helloworld.ui.ImageViewManager
                    android:id="@+id/my_user_face"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/black"></com.example.helloworld.ui.ImageViewManager>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/my_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="null"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/my_usernameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户账号:"
                            android:layout_marginTop="10dp"
                            ></TextView>
                        <TextView
                            android:id="@+id/my_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="username"
                            android:layout_marginTop="10dp"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="2"
                android:background="@drawable/layout_radius"
                android:padding="6dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp">
                </TextView>
                <TextView
                    android:id="@+id/my_user_myself"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:padding="6dp"
                    android:background="@drawable/my_selefmade">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/last"
                android:layout_width="10dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/layout_radius"
                android:orientation="vertical"
                android:padding="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp">
                </TextView>
                <TextView
                    android:id="@+id/my_user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/my_selefmade">
                </TextView>
                <TextView
                    android:id="@+id/my_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/my_selefmade">
                </TextView>
                <TextView
                    android:id="@+id/my_user_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/my_selefmade">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:paddingBottom="60dp"
            android:orientation="vertical"
            android:background="@drawable/layout_radius"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="0.1dp">
            <Button
                android:id="@+id/bt_chatNow"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/bt_sendMessage"
                android:enabled="true"
                android:background="@drawable/button_option"
                ></Button>
            <Button
                android:id="@+id/bt_addBlackList"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="1dp"
                android:text="@string/bt_addBlackList"
                android:background="@drawable/button_option2"
                android:visibility="visible"
                ></Button>
            <Button
                android:id="@+id/bt_deleteFriend"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="1dp"
                android:text="@string/bt_deleteFriend"
                android:background="@drawable/button_option2"
                ></Button>
            <Button
                android:id="@+id/bt_addFriend"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="1dp"
                android:text="@string/bt_addFriend"
                android:background="@drawable/button_option2"
                android:visibility="invisible"
                ></Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>