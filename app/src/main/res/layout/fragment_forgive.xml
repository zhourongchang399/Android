<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment_register">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/registerbackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="#60000000"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/check_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/check_id"></ImageView>

            <View
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff"></View>

            <ImageView
                android:id="@+id/reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/reset_password_false"></ImageView>

            <View
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff"></View>

            <ImageView
                android:id="@+id/win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/defect"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgive"
            android:textSize="23dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="#ffffff"
            android:textFontWeight="100"
            android:fontFamily="宋体"
            android:textStyle="bold"
            >
        </TextView>
        <EditText
            android:id="@+id/ed_forgive_phone_number"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:hint="手机号"
            android:background="@drawable/ed_design"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/phone"
            android:paddingLeft="15dp"
            android:drawablePadding="15dp"
            android:maxLines="1"
            android:inputType="number"
            ></EditText>
        <EditText
            android:id="@+id/ed_forgive_verification_code"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:hint="验证码"
            android:background="@drawable/ed_design"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/verifaction"
            android:paddingLeft="15dp"
            android:drawablePadding="15dp"
            android:maxLines="1"
            ></EditText>
        <Button
            android:id="@+id/bt_next_verification"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/bt_next"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="#bfbfbf"
            android:text="发送验证码">
        </Button>
        <Button
        android:id="@+id/bt_next_1"
            android:layout_width="230dp"
            android:layout_height="40dp"
        android:background="@drawable/bt_next"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="#bfbfbf"
        android:text="@string/bt_next">
    </Button>
    </LinearLayout>
</LinearLayout>