<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <TextView
        android:layout_margin="3dp"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:background="#60ffffff"
        android:layout_gravity="center"
        android:textSize="10dp"
        android:padding="3dp"
        android:visibility="visible"
        ></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/other_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:visibility="visible"
            >
    <ImageView
        android:id="@+id/other_face"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/black"
        android:layout_margin="3dp"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
        ></ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/defect_msg_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/left_layout"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/defect_msg_left"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:background="@drawable/defect_msg"
                android:visibility="invisible"
                ></ImageView>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:layout_toRightOf="@+id/other_layout"
        android:visibility="visible"
        android:background="@drawable/leftchatmsg">
        <TextView
            android:id="@+id/left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="62dp"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/other_image"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:maxWidth="400dp"
            android:maxHeight="500dp"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            ></ImageView>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/other_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_gravity="center_vertical">
        </pl.droidsonroids.gif.GifImageView>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <LinearLayout
            android:id="@+id/host_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >
        <ImageView
            android:id="@+id/host_face"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="visible"
            android:background="@color/black"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            ></ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/defect_msg_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/right_layout"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
        <ImageView
            android:id="@+id/defect_msg_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:background="@drawable/defect_msg"
            android:visibility="invisible"
            ></ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@+id/host_layout"
            android:background="@drawable/rightchatmsg"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/right_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/host_image"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:maxWidth="400dp"
                android:maxHeight="500dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:layout_margin="3dp"></ImageView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/host_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="center_vertical">
            </pl.droidsonroids.gif.GifImageView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>