<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/msgBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#23ffffff"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/back2"
        android:theme="?attr/actionBarTheme"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/other_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textFontWeight="1000"
            ></TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            >
            <ImageButton
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/other"
                android:layout_alignParentRight="true"
                ></ImageButton>
        </RelativeLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#ffffff"></TextView>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/msg"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    ></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:background="#ffffff">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#23ffffff"
        >
<ImageButton
    android:id="@+id/otherButton"
    android:layout_width="0dp"
    android:layout_height="32dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_weight="1"
    android:background="@drawable/add2"></ImageButton>
        <EditText
            android:id="@+id/input"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_margin="3dp"
            android:layout_weight="7"
            android:padding="5dp"
            android:background="@drawable/ed_design7"></EditText>
        <ImageButton
            android:id="@+id/emojiButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/emoji"></ImageButton>
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/send"></ImageButton>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>