<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="160dp"
    android:minWidth="230dp"
    tools:context=".view.selfInfoDialog"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#60000000"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  新密码  "
            android:textStyle="bold"
            android:textSize="16dp"
            ></TextView>
        <EditText
            android:id="@+id/new_pas"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="新密码"
            android:inputType="textPassword"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textStyle="bold"
            android:textSize="16dp"
            ></TextView>
        <EditText
            android:id="@+id/confirm_pas"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:inputType="textPassword"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
    <Button
        android:id="@+id/self_save"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:background="@drawable/shape_bt_other"
        android:text="修改"
        android:layout_margin="3dp"></Button>
    <Button
        android:id="@+id/self_cancel"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:background="@drawable/shape_bt_other"
        android:text="取消"
        android:layout_margin="3dp"></Button>
    </LinearLayout>
</LinearLayout>